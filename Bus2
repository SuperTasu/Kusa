        // ÁèæÂú®„ÅÆË®≠ÂÆö
        let currentSettings = {
            0: { direction: 'shinkaichi' },
            1: { direction: 'right', middleStop: 'yumeno' },
            2: { direction: 'itayado' }
        };

        // ÁèæÂú®„ÅÆÊõúÊó•„ÇíÂèñÂæó„Åó„Å¶Âπ≥Êó•/ÂúüÊó•„ÇíÂà§ÂÆö
        function getCurrentDayType() {
            const now = new Date();
            const dayOfWeek = now.getDay(); // 0: Êó•ÊõúÊó•, 1: ÊúàÊõúÊó•, ..., 6: ÂúüÊõúÊó•
            return (dayOfWeek === 0 || dayOfWeek === 6) ? 'weekend' : 'weekday';
        }

        // ÁèæÂú®„ÅÆÊõúÊó•„ÇíÊó•Êú¨Ë™û„ÅßÂèñÂæó
        function getCurrentDayName() {
            const now = new Date();
            const dayNames = ['Êó•', 'Êúà', 'ÁÅ´', 'Ê∞¥', 'Êú®', 'Èáë', 'Âúü'];
            const dayOfWeek = now.getDay();
            const isWeekend = (dayOfWeek === 0 || dayOfWeek === 6);
            return `${dayNames[dayOfWeek]}ÊõúÊó• (${isWeekend ? 'ÂúüÊó•„ÉÄ„Ç§„É§' : 'Âπ≥Êó•„ÉÄ„Ç§„É§'})`;
        }

        // ÁèæÂú®ÊôÇÂàª„ÇíÊõ¥Êñ∞
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('ja-JP', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            document.getElementById('currentTime').textContent = timeString;
        }

        // ÊõúÊó•„Ç§„É≥„Ç∏„Ç±„Éº„Çø„Éº„ÇíÊõ¥Êñ∞
        function updateDayIndicator() {
            const dayName = getCurrentDayName();
            for (let i = 0; i < 3; i++) {
                document.getElementById(`dayIndicator${i}`).textContent = dayName;
            }
        }

        // Ê¨°„ÅÆÁô∫ËªäÊôÇÂàª„ÇíË®àÁÆó
        function getNextDepartures(times, currentTime) {
            const current = currentTime.getHours() * 60 + currentTime.getMinutes();
            const departures = [];
            
            for (let time of times) {
                const [hour, minute] = time.split(':').map(Number);
                const timeInMinutes = hour * 60 + minute;
                
                if (timeInMinutes >= current) {
                    departures.push(time);
                    if (departures.length >= 2) break;
                }
            }
            
            return departures;
        }

        // ÂÅúÁïôÊâÄ„ÅÆÊÉÖÂ†±„ÇíÊõ¥Êñ∞
        function updateStopInfo(stopIndex) {
            const settings = currentSettings[stopIndex];
            const currentDayType = getCurrentDayType();
            let data;
            
            if (stopIndex === 1) {
                data = timetableData[stopIndex][settings.middleStop][currentDayType][settings.direction];
            } else {
                data = timetableData[stopIndex][currentDayType][settings.direction];
            }
            
            const routeInfo = document.getElementById(`routeInfo${stopIndex}`);
            const currentTime = new Date();
            
            let html = '';
            
            for (let route in data) {
                const nextDepartures = getNextDepartures(data[route], currentTime);
                
                html += `
                    <div class="route-group">
                        <div class="route-number">${route}Á≥ªÁµ±</div>
                        <div class="departure-times">
                            <div class="departure-item">
                                <span class="departure-label">ÂÖàÁô∫</span>
                                <div class="departure-time">${nextDepartures[0] || 'ÈÅãË°åÁµÇ‰∫Ü'}</div>
                            </div>
                            <div class="departure-item">
                                <span class="departure-label">Ê¨°Áô∫</span>
                                <div class="departure-time">${nextDepartures[1] || '---'}</div>
                            </div>
                        </div>
                    </div>
                `;
            }
            
            routeInfo.innerHTML = html;
        }

        // ÊñπÂêëÂ§âÊõ¥
        function changeDirection(stopIndex, direction) {
            currentSettings[stopIndex].direction = direction;
            
            // „Éú„Çø„É≥„ÅÆ„Ç¢„ÇØ„ÉÜ„Ç£„ÉñÁä∂ÊÖã„ÇíÊõ¥Êñ∞
            const section = document.querySelectorAll('.stop-section')[stopIndex];
            const buttons = section.querySelectorAll('.direction-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (stopIndex === 0) {
                buttons[0].classList.add('active');
            } else if (stopIndex === 1) {
                if (direction === 'right') {
                    buttons[0].classList.add('active');
                } else {
                    buttons[1].classList.add('active');
                }
            } else if (stopIndex === 2) {
                if (direction === 'itayado') {
                    buttons[0].classList.add('active');
                } else {
                    buttons[1].classList.add('active');
                }
            }
            
            updateStopInfo(stopIndex);
        }

        // ‰∏≠ÈñìÂÅúÁïôÊâÄÂ§âÊõ¥
        function changeMiddleStop() {
            const select = document.getElementById('middleStopSelect');
            currentSettings[1].middleStop = select.value;
            updateStopInfo(1);
        }

        // ÂàùÊúüÂåñ
        function initialize() {
            updateCurrentTime();
            updateDayIndicator();
            updateStopInfo(0);
            updateStopInfo(1);
            updateStopInfo(2);
            
            // 1Áßí„Åî„Å®„Å´Êõ¥Êñ∞
            setInterval(() => {
                updateCurrentTime();
                updateStopInfo(0);
                updateStopInfo(1);
                updateStopInfo(2);
            }, 1000);
            
            // 1ÂàÜ„Åî„Å®„Å´ÊõúÊó•„Ç§„É≥„Ç∏„Ç±„Éº„Çø„Éº„ÇíÊõ¥Êñ∞ÔºàÊó•‰ªò„ÅåÂ§â„Çè„Å£„ÅüÂ†¥Âêà„Å´ÂØæÂøúÔºâ
            setInterval(() => {
                updateDayIndicator();
            }, 60000);
        }

        // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´ÂàùÊúüÂåñ
        window.addEventListener('load', initialize);
    </script>
</body>
</html>
